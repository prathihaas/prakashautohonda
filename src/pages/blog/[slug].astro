---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { title_en, title_te, date, author, seo_title, seo_description } = entry.data;
---

<Layout title={seo_title} description={seo_description}>
  <main class="max-w-3xl mx-auto px-4 py-16">
    <header class="text-center mb-12">
      <div class="text-sm font-bold text-red-600 mb-4">{date} â€¢ {author}</div>
      <h1 class="text-3xl md:text-5xl font-black text-gray-900 mb-4 leading-tight">{title_en}</h1>
      <h2 class="text-xl md:text-2xl text-gray-500 font-noto">{title_te}</h2>
    </header>

    <article class="prose prose-lg max-w-none prose-red">
      <Content />
    </article>
  </main>
</Layout>