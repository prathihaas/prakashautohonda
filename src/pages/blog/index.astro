---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf());
---

<Layout title="Blog | Sairam Honda" description="Latest updates and news from Sairam Honda Nizamabad">
  <main class="max-w-7xl mx-auto px-4 py-16">
    <div class="text-center mb-16">
      <h1 class="text-4xl font-black mb-2">Latest Updates</h1>
      <p class="text-gray-500 font-noto text-xl">తాజా వార్తలు మరియు అప్‌డేట్‌లు</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {sortedPosts.map(post => (
        <a href={`/blog/${post.slug}`} class="group bg-white rounded-2xl border border-gray-100 overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300">
          <div class="aspect-video bg-gray-100">
            {post.data.featured_image && <img src={post.data.featured_image} alt={post.data.title_en} class="w-full h-full object-cover" />}
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-1 group-hover:text-red-600 transition">{post.data.title_en}</h3>
            <p class="text-gray-500 font-noto font-medium mb-3">{post.data.title_te}</p>
            <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">{post.data.date}</span>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>