---
import { getEntry, getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import BilingualText from '../components/BilingualText.astro';
import ProductCard from '../components/ProductCard.astro';

// Fetch Content
const homePage = await getEntry('pages', 'home');
const products = await getCollection('products');
const branches = await getCollection('branches');

if (!homePage) {
  throw new Error("Could not find 'home' entry in 'pages' collection.");
}

const { title_en, title_te, description_en, description_te, seo_title, seo_description, hero_image } = homePage.data;
---

<Layout title={seo_title} description={seo_description}>
  
  <!-- HERO SECTION -->
  <div class="relative pt-32 pb-20 md:pt-48 md:pb-32 overflow-hidden bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center max-w-4xl mx-auto">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-red-100 text-red-700 mb-6">
          <span class="text-xs font-bold uppercase tracking-wider">No.1 Dealer in Nizamabad</span>
        </div>
        
        <BilingualText 
          size="h1"
          class="mb-8"
          en={title_en}
          te={title_te}
        />

        <div class="mt-4 max-w-2xl mx-auto mb-10">
            <p class="text-lg text-gray-600">{description_en}</p>
            <p class="text-base text-gray-500 font-noto mt-1">{description_te}</p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/products" class="flex flex-col items-center bg-gray-900 text-white px-8 py-4 rounded-xl hover:bg-gray-800 transition shadow-lg hover:shadow-xl">
            <span class="font-bold">View Latest Models</span>
            <span class="text-xs text-gray-400 font-noto mt-1">కొత్త మోడళ్లను చూడండి</span>
          </a>
        </div>
      </div>

      <div class="mt-16 relative">
        <div class="absolute inset-0 bg-gradient-to-t from-white via-transparent to-transparent z-10 h-full w-full"></div>
        <img 
          src={hero_image} 
          alt="Honda Showroom" 
          class="rounded-2xl shadow-2xl w-full object-cover h-64 md:h-[500px] grayscale-[20%]"
        />
      </div>
    </div>
  </div>

  <!-- FEATURES SECTION -->
  <div class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="flex flex-col items-center text-center p-6 rounded-2xl bg-gray-50 border border-gray-100">
            <div class="w-12 h-12 bg-red-100 text-red-600 rounded-full flex items-center justify-center mb-4 font-bold text-xl">1</div>
            <BilingualText size="h3" en="Authorized Dealer" te="అధీకృత డీలర్" class="mb-2" />
            <p class="text-sm text-gray-600">Genuine parts & warranty service.</p>
          </div>
          <div class="flex flex-col items-center text-center p-6 rounded-2xl bg-gray-50 border border-gray-100">
            <div class="w-12 h-12 bg-red-100 text-red-600 rounded-full flex items-center justify-center mb-4 font-bold text-xl">2</div>
            <BilingualText size="h3" en="Expert Service" te="నిపుణులైన సర్వీసింగ్" class="mb-2" />
            <p class="text-sm text-gray-600">Trained technicians for your vehicle.</p>
          </div>
          <div class="flex flex-col items-center text-center p-6 rounded-2xl bg-gray-50 border border-gray-100">
             <div class="w-12 h-12 bg-red-100 text-red-600 rounded-full flex items-center justify-center mb-4 font-bold text-xl">3</div>
            <BilingualText size="h3" en="Quick Finance" te="త్వరిత ఫైనాన్స్" class="mb-2" />
            <p class="text-sm text-gray-600">Easy EMI options available.</p>
          </div>
      </div>
    </div>
  </div>

  <!-- PRODUCT GRID -->
  <div class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-end mb-12">
        <BilingualText 
          size="h2" 
          en="Our Collection" 
          te="మా వాహన శ్రేణి" 
        />
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {products.map((product) => (
          <ProductCard 
            title_en={product.data.name_en}
            title_te={product.data.name_te}
            price={product.data.price}
            mileage={product.data.mileage || 'N/A'}
            image={product.data.featured_image || ''}
            slug={product.slug}
            category={product.data.category}
          />
        ))}
      </div>
    </div>
  </div>

  <!-- SERVICE SECTION -->
  <div class="py-20 bg-gray-900 text-white relative overflow-hidden">
    <div class="absolute top-0 right-0 w-64 h-64 bg-red-600 opacity-10 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="text-red-500 font-bold tracking-wider uppercase text-sm">Service & Support</span>
          <h2 class="text-4xl font-bold mt-2 mb-2">Expert Care for Your Honda</h2>
          <h3 class="text-xl text-gray-400 font-noto font-medium mb-6">మీ హోండా కోసం నిపుణుల సంరక్షణ</h3>
          
          <ul class="space-y-4 mb-8">
              <li class="flex items-center gap-3"><span class="text-red-500">✓</span> Genuine Spare Parts (అసలైన విడిభాగాలు)</li>
              <li class="flex items-center gap-3"><span class="text-red-500">✓</span> Trained Technicians (శిక్షణ పొందిన మెకానిక్స్)</li>
              <li class="flex items-center gap-3"><span class="text-red-500">✓</span> Online Booking (ఆన్‌లైన్ బుకింగ్)</li>
          </ul>
          
          <a href="https://wa.me/918886640573?text=I%20want%20to%20book%20service" class="inline-flex bg-red-600 text-white px-6 py-3 rounded-lg font-bold hover:bg-red-700 transition">
            Book Service Now
          </a>
        </div>
        <div class="relative">
          <img 
            src="https://yashhonda.com/wp-content/uploads/2020/05/workshop-min-1024x382-1.png" 
            alt="Service Center" 
            class="rounded-2xl shadow-2xl border border-gray-700 opacity-90"
          />
        </div>
      </div>
    </div>
  </div>

  <!-- BRANCHES SECTION -->
  <div class="py-16 bg-white" id="branches">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <BilingualText size="h2" en="Visit our Showrooms" te="మా షోరూమ్‌లను సందర్శించండి" class="mb-12 text-center" />

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {branches.map((branch) => (
          <div class="bg-white rounded-2xl border border-gray-200 p-6 hover:border-red-200 transition-colors shadow-sm">
            <div class="flex items-start justify-between mb-4">
              <BilingualText size="large" en={branch.data.name_en} te={branch.data.name_te} />
            </div>
            
            <div class="space-y-4 mb-6">
              <p class="text-gray-600 leading-relaxed">
                {branch.data.address_en}
                <span class="block text-gray-500 text-sm font-noto mt-1">{branch.data.address_te}</span>
              </p>
              <div class="flex items-center gap-2 text-gray-900 font-bold">
                {branch.data.phone}
              </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <a href={branch.data.map_link} target="_blank" class="flex items-center justify-center gap-2 border border-gray-200 rounded-lg py-2 hover:bg-gray-50 font-medium text-sm">
                Get Directions
              </a>
              <a href={`https://wa.me/918886640573`} class="flex items-center justify-center gap-2 bg-green-50 text-green-700 border border-green-200 rounded-lg py-2 hover:bg-green-100 font-medium text-sm">
                 WhatsApp
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

</Layout>