---
import BilingualText from './BilingualText.astro';
---
<nav class="fixed w-full bg-white/90 backdrop-blur-md z-40 border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-20 items-center">
      <!-- Logo -->
      <a href="/" class="flex-shrink-0 group">
        <div class="flex flex-col">
          <h1 class="text-2xl font-black tracking-tighter text-red-600 group-hover:opacity-90 transition">
            PRAKASH AUTO HONDA 
          </h1>
          <span class="text-xs text-gray-500 font-bold tracking-widest font-noto">
            ప్రకాష్ ఆటో హోండా
          </span>
        </div>
      </a>

      <!-- Desktop Nav -->
      <div class="hidden md:flex space-x-8 items-center">
        <a href="/products" class="flex flex-col items-start hover:opacity-70 transition-opacity">
           <span class="text-sm font-bold text-gray-900">Bikes & Scooters</span>
           <span class="text-[10px] text-gray-500 font-noto">బైకులు & స్కూటర్లు</span>
        </a>
        <a href="/#branches" class="flex flex-col items-start hover:opacity-70 transition-opacity">
           <span class="text-sm font-bold text-gray-900">Branches</span>
           <span class="text-[10px] text-gray-500 font-noto">బ్రాంచ్‌లు</span>
        </a>
        <a href="/blog" class="flex flex-col items-start hover:opacity-70 transition-opacity">
           <span class="text-sm font-bold text-gray-900">Blog</span>
           <span class="text-[10px] text-gray-500 font-noto">బ్లాగ్</span>
        </a>
        
        <a href="https://wa.me/918886640573" class="bg-red-600 text-white px-4 py-2 rounded-lg text-sm font-bold hover:bg-red-700 transition flex items-center gap-2">
           <span>Enquire</span>
           <span class="font-noto text-xs opacity-80">విచారించండి</span>
        </a>
      </div>
    </div>
  </div>
</nav>
