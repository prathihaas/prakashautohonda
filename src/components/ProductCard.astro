---
import BilingualText from './BilingualText.astro';

interface Props {
    title_en: string;
    title_te: string;
    price: string;
    mileage: string;
    image: string;
    slug: string;
    category: string;
}

const { title_en, title_te, price, mileage, image, slug, category } = Astro.props;
---
<a href={`/products/${slug}`} class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 flex flex-col">
  <div class="relative aspect-[4/3] overflow-hidden bg-gray-100">
    <div class="absolute top-3 left-3 bg-white/90 backdrop-blur text-xs font-bold px-2 py-1 rounded text-gray-900 z-10">
      {category}
    </div>
    <img src={image} alt={title_en} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
  </div>
  
  <div class="p-5 flex-1 flex flex-col">
    <div class="mb-1">
      <h3 class="text-xl font-bold text-gray-900">{title_en}</h3>
      <p class="text-sm text-gray-500 font-noto font-medium">{title_te}</p>
    </div>
    
    <div class="mt-4 flex items-center gap-4 text-sm text-gray-600 mb-4">
       <div class="bg-gray-100 px-2 py-1 rounded flex items-center gap-1">
          <span>{mileage}</span>
       </div>
       <div class="font-semibold text-red-600">
         {price}
       </div>
    </div>

    <div class="mt-auto pt-4 border-t border-gray-100 text-center">
      <span class="text-sm font-bold text-red-600 group-hover:text-red-700">View Details &rarr;</span>
    </div>
  </div>
</a>